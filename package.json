{
  "name": "bridge",
  "description": "CLI to manage and verify the bridge between NEAR and Ethereum",
  "version": "0.0.1",
  "author": "Marcelo Fornet @mfornet",
  "bin": "./bin/run",
  "bugs": "https://github.com/mfornet/bridge/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^3",
    "prom-client": "^13.1.0",
    "tslib": "^1",
    "tslint": "^6.1.3",
    "tslog": "^3.2.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@hqoss/monads": "^0.5.0",
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "chai": "^4",
    "eslint": "^7.30.0",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "globby": "^10",
    "mocha": "^5",
    "near-api-js": "^0.42.0",
    "nyc": "^14",
    "prettier": "^2.3.2",
    "ts-node": "^8",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=10.1.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/mfornet/bridge",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "bridge",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "mfornet/bridge",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts"
}
